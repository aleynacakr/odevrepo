@model IEnumerable<KuaforRandevuSistemi.Models.Calisan>

<h2>Çalışan Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık Alanı</th>
            <th>Uygunluk Saatleri</th>
            <th>Salon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.AdSoyad</td>
                <td>@calisan.UzmanlikAlani</td>
                <td>@calisan.UygunlukSaatleri</td>
                <td>@calisan.Salon?.Ad</td>
                <td>
                    <a href="@Url.Action("Details", "Calisan", new { id = calisan.Id })" class="btn btn-info">Detaylar</a>
                    <a href="@Url.Action("Edit", "Calisan", new { id = calisan.Id })" class="btn btn-warning">Düzenle</a>
                    <a href="@Url.Action("Delete", "Calisan", new { id = calisan.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Calisan")" class="btn btn-primary">Yeni Çalışan Ekle</a>
